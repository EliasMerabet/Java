        <%Locale locale = null;
            String strIdioma = request.getParameter("idioma");
            if (strIdioma != null) {
                if (strIdioma.equals("en")) {
                    locale = new Locale("en");
                    session.setAttribute(Globals.LOCALE_KEY, locale);
                } else if (strIdioma.equals("es")) {
                    locale = new Locale("es");
                    session.setAttribute(Globals.LOCALE_KEY, locale);
          }
      }%>

